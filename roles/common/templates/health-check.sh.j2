#!/bin/bash
# PowerDNS Health Check Script - Generated by Ansible

set -euo pipefail

# Configuration
SERVICE_NAME="{{ powerdns_service_name }}"
CONFIG_FILE="{{ powerdns_config_file }}"
LOG_FILE="/var/log/powerdns-health.log"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# Health status
HEALTH_STATUS=0

# Logging function
log() {
    echo "$(date '+%Y-%m-%d %H:%M:%S') - $1" | tee -a "$LOG_FILE"
}

info() {
    echo -e "${BLUE}[INFO]${NC} $1"
    log "INFO: $1"
}

success() {
    echo -e "${GREEN}[OK]${NC} $1"
    log "SUCCESS: $1"
}

warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
    log "WARNING: $1"
}

error() {
    echo -e "${RED}[ERROR]${NC} $1"
    log "ERROR: $1"
    HEALTH_STATUS=1
}

# Check service status
check_service_status() {
    info "Checking PowerDNS service status..."
    
    if systemctl is-active --quiet "$SERVICE_NAME"; then
        success "PowerDNS service is running"
    else
        error "PowerDNS service is not running"
        return 1
    fi
}

# Main execution
main() {
    info "Starting PowerDNS health check..."
    
    check_service_status
    
    if [[ $HEALTH_STATUS -eq 0 ]]; then
        success "Overall Health Status: HEALTHY"
    else
        error "Overall Health Status: UNHEALTHY"
    fi
    
    exit $HEALTH_STATUS
}

# Run main function
main "$@"
